@model logictast.Entities.Customer
@{
    ViewBag.Title = "Home Page";
}
@using (Html.BeginForm("Index", "Home", FormMethod.Post, new { @id = "Form", @role = "Form", @class = "form-horizontal", enctype = "multipart/form-data" }))
{

    <center>
        <h1>CUSTOMER DETAILS</h1>
        <table>
            <tr>
                <td>CUSTOMER NAME</td>
                <td>
                    @Html.TextBoxFor(c => c.c_name)
                    @Html.HiddenFor(c => c.c_id)
                    @Html.ValidationMessageFor(c => c.c_id)
                </td>
            </tr>
            <tr>
                <td>CUSTOMER MOBILE</td>
                <td>@Html.TextBoxFor(c => c.c_mobile)</td>
            </tr>
            <tr>
                <td>CUSTOMER EMAIL</td>
                <td>@Html.TextBoxFor(c => c.c_email)</td>
            </tr>
            <tr>
                <td>CUSTOMER GENDER</td>
                <td>
                    @Html.RadioButtonFor(c => c.c_gender, "MALE")MALE
                    @Html.RadioButtonFor(c => c.c_gender, "FEMALE")FEMALE
                </td>
            </tr>
            <tr>
                <td>CUSTOMER AGE</td>
                <td>@Html.TextBoxFor(c => c.c_age)</td>
            </tr>
            <tr>
                <td>
                    <input id="Submit1" type="submit" value="SAVE" />
                </td>
                <td><input type="button" value="GO TO LIST" onclick="location.href='@Url.Action("Display", "Home")'" /></td>

            </tr>
        </table>
    </center>
}
@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>@ViewBag.Title.</h1>
                <h2>@ViewBag.Message</h2>
            </hgroup>
            <p>
                To learn more about ASP.NET MVC visit
                <a href="http://asp.net/mvc" title="ASP.NET MVC Website">http://asp.net/mvc</a>.
                The page features <mark>videos, tutorials, and samples</mark> to help you get the most from ASP.NET MVC.
                If you have any questions about ASP.NET MVC visit
                <a href="http://forums.asp.net/1146.aspx/1?MVC" title="ASP.NET MVC Forum">our forums</a>.
            </p>
        </div>
    </section>
}
